# IWMS Environment Variables Template
# Copy this to .env and fill in production secrets

# Backend Selection
PORT=4000
NODE_ENV=production

# Database
DATABASE_URL=postgres://user:password@hostname:5432/iwms

# Security (MANDATORY in production)
JWT_SECRET=generate_a_long_random_string_here
SESSION_SECRET=generate_another_long_random_string_here

# Frontend URL (for CORS)
CLIENT_URL=https://iwms-app.example.com

# Redis (for Queue/BullMQ)
REDIS_URL=redis://redis-host:6379
